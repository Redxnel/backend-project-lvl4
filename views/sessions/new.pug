extends /layouts/application.pug

block content
  .text-center
    h1(style="font-family: 'Fredoka One', cursive; color: green") Sign in
    .row.justify-content-center.pb-5
      .col-12.col-lg-4
        +formFor(f, { url: urlFor('session'), method: 'post' })
          +input(f, 'email', { as: 'email', placeholder: 'Email address', id: 'inputEmail'})
          +input(f, 'password', { as: 'password', placeholder: 'Password', id: 'inputPassword' })
          button.btn.btn-lg.btn-success.btn-block(type='submit') Sign in
