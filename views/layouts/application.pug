include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/main.js')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      a.navbar-brand(href='/') Task Manager
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expended="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse(id="navbarCollapse")
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href=urlFor('users')) Users
              span.sr-only
        ul.navbar-nav
          form.form-inline.mt-2.mt-md-0
            if isSignedIn()
              li.nav-item
                a.nav-link.btn.btn-outline-danger.my-2.my-sm-0(href=urlFor('sessionDelete') data-method='delete' rel='nofollow') Sign Out
            else
              li.nav-item
                a.nav-link.btn.btn-outline-primary.my-4.mr-sm-2(href=urlFor('newUser')) Sign Up
              li.nav-item
                a.nav-link.btn.btn-outline-success.my-2.my-sm-0(href=urlFor('newSession')) Sign In
    .container
      .jumbotron
        block content