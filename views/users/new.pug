extends /layouts/application.pug

block content
  .text-center
    h1 Create your profile
    .row.justify-content-center.pb-5
      .col-12.col-lg-4
        +formFor(f, { url: urlFor('users#create', userId), method: 'post' })
          +input(f, 'email', { as: 'email', placeholder: 'Email address', id: 'inputEmail' })
          +input(f, 'firstName', { as: 'firstName', placeholder: 'First name', id: 'inputFirstName' })
          +input(f, 'lastName', { as: 'lastName', placeholder: 'Last name', id: 'inputLastName' })
          +input(f, 'password', { as: 'password',  placeholder: 'Password', id: 'inputPassword'})
          button.btn.btn-lg.btn-primary.btn-block Sign up